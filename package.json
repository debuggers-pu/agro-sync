{
    "name": "agri-sync",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "setup": " npx lerna run setup --scope=@agri-sync/cms",
        "start:cms": "npx lerna run up --scope=@agri-sync/cms",
        "start:app": "cd packages/app && expo start",
        "prepare": "cd .. && husky install frontend/.husky",
        "lint-front": "lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,tsx, jsx}": [
            "eslint --quiet --fix"
        ],
        "*.{json,md,html,js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2"
    }
}
